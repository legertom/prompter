<%= form_with(model: resource_link, local: true) do |form| %>
    <% if resource_link.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(resource_link.errors.count, "error") %> prohibited this resource_link from being saved:</h2>
        <ul>
          <% resource_link.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :url %>
      <%= form.text_field :url, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :image_url %>
      <%= form.text_field :image_url, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :resource_category_id, "Category" %>
      <%= form.collection_select :resource_category_id, ResourceCategory.all, :id, :name, {}, {class: 'form-control'} %>
    </div>
  
    <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
  